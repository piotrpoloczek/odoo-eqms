<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View User  -->
    <record id="plm_rev_wizard_view" model="ir.model.access">
        <field name="name">PLM Rev Wizard View</field>
        <field name="model_id" ref="model_plm_temporary"/>
        <field name="group_id" ref="plm.group_plm_view_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Integration User  -->
    <record id="plm_rev_wizard_integration" model="ir.model.access">
        <field name="name">PLM Rev Wizard View Integration</field>
        <field name="model_id" ref="model_plm_temporary"/>
        <field name="group_id" ref="plm.group_plm_integration_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Administrator  -->
    <record id="plm_rev_wizard_admin" model="ir.model.access">
        <field name="name">PLM Rev Wizard Admin</field>
        <field name="model_id" ref="model_plm_temporary"/>
        <field name="group_id" ref="plm.group_plm_admin"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>
