<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_plm_description_extension" model="ir.ui.view">
        <field name="name">plm.description.view.advanced.translation</field>
        <field name="model">plm.description</field>
        <field name="inherit_id" ref="plm.view_plm_description"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description_en']" position="replace"/>
            <xpath expr="//field[@name='sequence']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
